<li class="chat-list-item {{#if active}} chat-list-item__active{{/if}}">
  {{> avatar/avatar src=avatarSrc}}
  <div class="chat-list-item__data">
    <div class="chat-list-item__data-part">
      <p class="chat-list-item__data-name">{{name}}</p>
      <div class="chat-list-item__date-and-checked">
        {{#if check_sent}}
          <img src="../../static/icons/message/sent.svg" alt="Статус" class="chat-list-item__data-status">
        {{/if}}
        {{#if check_read}}
          <img src="../../static/icons/message/read.svg" alt="Статус" class="chat-list-item__data-status">
        {{/if}}
        <p>{{messageDate}}</p>
      </div>
    </div>
    <div class="chat-list-item__data-part">
      <p class="chat-list-item__data-text">{{text}}</p>
      {{#if unread}}
          <div class="chat-list-item__data-unread">
            <p>{{unread}}</p>
          </div>
      {{/if}}
    </div>
  </div>
</li>
