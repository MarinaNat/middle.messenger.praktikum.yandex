<div class="form__wrapper">
  {{> formHeader/formHeader header}}
  <form action="#" class="form" method="post">
    <fieldset class="form__inputs-wrapper">
      {{#each inputs}}
        {{> formItem/formItem this}}
      {{/each}}
    </fieldset>
    <div class="form__buttons-wrapper">
      {{> formButton/formButton button}}
      {{> formLink/formLink link}}
    </div>
  </form>
</div>
