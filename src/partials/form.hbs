<div class='form-container-wrapper'>
  <div class='form-container'>
    <h2 class='form__header'>{{data.header}}</h2>
    <form class='form__form'>
      {{#each data.fields}}
        <div class='field'>
          <label for={{fieldName}} class='field__label'>{{fieldLabel}}</label>
          <input
            type={{fieldType}}
            id={{fieldName}}
            class='field__input'
            name={{fieldName}}
          />
        </div>
      {{/each}}
      {{> button text=data.button.text class='u-margin-top-big'}}
    </form>
    {{> button-link text=data.subButton class='form__link'}}
  </div>
</div>